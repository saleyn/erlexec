{erl_opts, [
  debug_info,
	warnings_as_errors,
	warn_export_all
]}.

% `rebar.config.script` has the config for `edoc_opts`, `pre_hooks` and `post_hooks`

{plugins, [rebar3_hex, {rebar3_ex_doc, "0.2.12"}]}.
{hex, [{doc, ex_doc}]}.

{ex_doc, [
    {extras, [
      {"README.md", #{title => "Overview"}},
      {"LICENSE",   #{title => "License"}}
    ]},
    {main,          "README.md"},
    {source_url,    "https://github.com/saleyn/erlexec"}
]}.
